    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.9.2/themes/blitzer/jquery-ui.css" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="~/css/toast.css" />

    <title>@ViewData["Title"]</title>


    <link rel="stylesheet" href="~/Customer/style.css" />
    <style>
        .nav-link {
            font-size: 16px !important;
            font-family: Roboto,Arial,sans-serif !important;
        }

        #select:hover {
            border: none;
        }

        li.nav-item {
            padding-right: 15px;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/ui/1.13.1/jquery-ui.js" integrity="sha256-6XMVI0zB8cRzfZjqKcD01PBsAy3FlDASrlC8SxCpInY=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-cookie/1.4.1/jquery.cookie.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script type="text/javascript" src="~/js/toast.js"></script>
    <script src="~/js/app.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-dark align-content-center fixed-top" style="background-color: #007bff;">
        <div class="container-fluid mx-auto">
            <a class="navbar-brand align-content-center ml-3 mx-0 p-0" asp-action="Index" asp-controller="Home" id="brand">
                <img src="~/Image/E-flyer__2_-removebg-preview.png" alt="E-Commerce" class="navbar-brand img-fluid social-icon" style="width:175px; height:20%">
            </a>

            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="toggler-icon top-bar"></span>
                <span class="toggler-icon middle-bar"></span>
                <span class="toggler-icon bottom-bar"></span>
            </button>

            <div class="collapse navbar-collapse mt-3 p-0" id="navbarResponsive">
                <form asp-action="Index" asp-controller="Home" method="post" class="col-sm-12 col-lg-5 col-xl-5 ml-1 my-2 mt-lg-0 vw-100">
                    <div class=" input-group-text text-primary bg-white" style="border-radius:30px;">
                        @*<div class="">*@
                        <input type="text" id="search2" name="search" placeholder="Search for products,brands and more" style="padding: 0 16px; border-radius: 2px 0 0 2px; border: 0; outline: 0 none; font-size: 14px; height: 36px; width: 100%;" />
                        <div>
                            <input type="hidden" id="hfcustom" name="Product_name" />
                        </div>
                        <button type="submit" style="justify-content: flex-end; border: 0; outline:0 none; background-color: white; height: 36px; width: 44px; border-radius: 2px; cursor: pointer; padding: 4px 12px 0 8px; ">
                            <svg width="20" height="20" viewBox="0 0 17 18" class="" xmlns="http://www.w3.org/2000/svg"><g fill="#000000" fill-rule="evenodd"><path class="_34RNph" d="m11.618 9.897l4.225 4.212c.092.092.101.232.02.313l-1.465 1.46c-.081.081-.221.072-.314-.02l-4.216-4.203"></path><path class="_34RNph" d="m6.486 10.901c-2.42 0-4.381-1.956-4.381-4.368 0-2.413 1.961-4.369 4.381-4.369 2.42 0 4.381 1.956 4.381 4.369 0 2.413-1.961 4.368-4.381 4.368m0-10.835c-3.582 0-6.486 2.895-6.486 6.467 0 3.572 2.904 6.467 6.486 6.467 3.582 0 6.486-2.895 6.486-6.467 0-3.572-2.904-6.467-6.486-6.467"></path></g></svg>
                        </button>
                        @*</span>*@
                        @*</div>*@
                    </div>
                </form>




                <ul class="navbar-nav ml-4">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-action="Index" asp-controller="Home" id="link"><i class="fas fa-home">Home</i><span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-action="aboutus" id="link"><i class="fas fa-id-card-alt">About Us</i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-action="contactus" id="link"><i class="fa fa-american-sign-language-interpreting">Contact Us</i></a>
                    </li>

                    @if (_signInManager.IsSignedIn(User))
                    {
                        if (User.IsInRole("Customer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link js-scroll-trigger text-light" asp-action="cart" asp-controller="Home" asp-route-cart="@TempData["getid"]">
                                    <i class="fas fa-shopping-cart">
                                        Cart
                                        <span class="badge badge-danger item_count">0</span>
                                    </i>
                                </a>
                            </li>
                            <li class="nav-item dropdown d-flex justify-content-sm-start">
                                <a class="nav-link dropdown-toggle text-light font-weight-bold btn btn-sm border-0" href="#" id="dropdownId" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@User.FindFirst("UserFirstName").Value</a>
                                <div class="dropdown-menu bg-light my-1 p-0" aria-labelledby="dropdownId">

                                    <a class="dropdown-item font-weight-bold" id="a_id">Logout</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item font-weight-bold" asp-action="EditProfile" asp-controller="Home" asp-route-id="@TempData["getid"]">My Profile</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item font-weight-bold" asp-action="orders" asp-controller="Home" asp-route-id="@TempData["getid"]">Orders</a>

                                </div>
                            </li>
                        }

                        @* else
                        {
                            <li class="nav-item mx-md-auto">

                                <a class="nav-link text-light btn btn-outline-primary" asp-action="login" asp-controller="Account" asp-route-returnUrl="@Context.Request.Path" id="link"><i class="fa fa-users">Login</i></a>

                            </li>

                        }*@

                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link js-scroll-trigger text-light" asp-action="cart" asp-controller="Home">
                                <i class="fas fa-shopping-cart">
                                    Cart
                                    <span class="badge badge-danger item_count">0</span>
                                </i>
                            </a>
                        </li>

                        <li class="nav-item">

                            <a class="nav-link" id="select" onclick="location.href = '/Account/Login/'" style="color: #2874f0; font-weight: 500; background-color: #fff; cursor: pointer; border-radius: 2px; height: 32px; padding: 4px 35px; border: 1px solid #dbdbdb;display:inline-block;">Login</a>

                        </li>
                    }


                </ul>
            </div>
        </div>


    </nav>
    <div>
        @RenderBody()
    </div>
    <footer class="page-footer font-small pt-0 " style="position: sticky; top: 100%; background-color: #172337; color: #f0f0f0; ">



        <!-- Footer Links -->
        <div class="container text-center text-md-left ">



            <!-- Footer links -->
            <div class="row text-center text-md-left mt-3 pb-3">



                <hr class="w-100 clearfix d-md-none">



                <!-- Grid column -->
                <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 font-weight-bold">Products</h6>
                    <p>
                        <a href="#!">Ecommerce</a>
                    </p>
                    <p>
                        <a href="#!">Best Product</a>
                    </p>
                    <p>
                        <a href="#!">About Company</a>
                    </p>




                </div>
                <!-- Grid column -->



                <hr class="w-100 clearfix d-md-none">



                <!-- Grid column -->
                <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 font-weight-bold">Useful links</h6>
                    <p>
                       
                      
                            <a asp-action="EditProfile">Account</a>

                    </p>



                    <p>
                        <a  asp-action="aboutus">About us </a>
                    </p>
                    <p>
                        <a asp-action="contactus">Contact us</a>
                    </p>

                </div>



                <!-- Grid column -->
                <hr class="w-100 clearfix d-md-none">



                <!-- Grid column -->
                <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
                    <h6 class="text-uppercase mb-4 font-weight-bold">Contact</h6>
                    <p>
                        <i class="fas fa-home mr-3"></i> Gujarat,India
                    </p>
                    <p>
                        <i class="fas fa-envelope mr-3"></i> Ecommerce@gmail.com
                    </p>
                    <p>
                        <i class="fas fa-phone mr-3"></i> +919876543210
                    </p>

                </div>
                <!-- Grid column -->



            </div>
            <!-- Footer links -->



            <hr>



            <!-- Grid row -->
            <div class="row d-flex align-items-center">



                <!-- Grid column -->
                <div class="col-md-7 col-lg-8">



                    <!--Copyright-->
                    <p class="text-center text-md-left">
                        © 2020 Copyright:
                        <a href="#">
                            <strong>Ecommerce.com</strong>
                        </a>
                    </p>



                </div>
                <!-- Grid column -->
                <!-- Grid column -->
                <div class="col-md-5 col-lg-4 ml-lg-0">



                    <!-- Social buttons -->
                    <div class="text-center text-md-right">
                        <ul class="list-unstyled list-inline">
                            <li class="list-inline-item">
                                <a href="#" class="btn-sm rgba-white-slight mx-1">
                                    <i class="fab fa-facebook-f"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#" class="btn-floating btn-sm rgba-white-slight mx-1">
                                    <i class="fab fa-twitter"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#" class="btn-floating btn-sm rgba-white-slight mx-1">
                                    <i class="fab fa-google-plus-g"></i>
                                </a>
                            </li>
                            <li class="list-inline-item">
                                <a href="#" class="btn-floating btn-sm rgba-white-slight mx-1">
                                    <i class="fab fa-linkedin-in"></i>
                                </a>
                            </li>
                        </ul>
                    </div>



                </div>
                <!-- Grid column -->



            </div>
            <!-- Grid row -->



        </div>
        <!-- Footer Links -->



    </footer>






    @* <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>*@


    <script>
        
        $("#a_id").click(function () {

            swal({
                title: 'Logout',
                text: 'Do you want to logout this Account?',
                icon: 'warning',
                buttons: true,
                dangerMode: true
            })
                .then((willOUT) => {
                    if (willOUT) {
                        window.location.href = '/Account/logout', {
                            icon: 'success',
                        }
                    }
                });

        });
    </script>

</body>
</html>
@{
    TempData.Keep("getid");
 }