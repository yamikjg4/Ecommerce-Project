@model E_Commerce.Models.ForgotPasswodModel

@{
    ViewData["Title"] = "ForgotPassword";
    Layout = "~/Views/Shared/_custdash.cshtml";
}


<div class="container">

    <div class="row py-5">
        <div class="col-6"><img src="~/Image/log.svg" class="img-fluid" style="width:400px; height:500px;"></div>
        <div class="col-6">
            @if (Model?.EmailSent == true)
            {
                <div class="alert alert-success" role="alert">
                    <p>
                        If you are registered with us, <br />
                        We have sent an email on your registered email id
                    </p>
                </div>
            }
            else
            {
                <div class="py-5">
                    <p>Forgot your password? No worries you can reset it easily.</p>
                    <form asp-action="ForgotPassword">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control w-75" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Continue" class="btn btn-primary" />
                        </div>
                    </form>
                </div>

            }

        </div>

    </div>




</div>
