@model E_Commerce.Models.Product

@{
    ViewData["Title"] = "viewproduct";
    Layout = "~/Views/Shared/_custdash.cshtml";
}

<style>
       @* body {
            font-family: 'Roboto Condensed', sans-serif;
            background-color: #f5f5f5
        }*@

        .hedding {
            font-size: 20px;
            color: #ab8181;
        }

        .main-section {
            position: relative;
            left: 50%;
            right: 50%;
            transform: translate(-50%, 0%);
        }

        .left-side-product-box img {
            width: 100%;
        }

        .left-side-product-box .sub-img img {
            margin-top: 5px;
            width: 83px;
            height: 100px;
        }

        .right-side-pro-detail span {
            font-size: 15px;
        }

        .right-side-pro-detail p {
            font-size: 25px;
            color: #a1a1a1;
        }

        .right-side-pro-detail .price-pro {
            color: #E45641;
        }

        .right-side-pro-detail .tag-section {
            font-size: 18px;
            color: #5D4C46;
        }

        .pro-box-section .pro-box img {
            width: 100%;
            height: 100%;
        }


</style>

<div class="container">
    <div class="col-lg-12 border p-3 main-section bg-white">
        <div class="row hedding m-0 pl-3 pt-0 pb-3">
            Product Detail
        </div>
        <div class="row m-0">
            <div class="col-lg-4 left-side-product-box pb-3">

                <img src="~/Products/@Model.ImageFile" class="border p-3" height="330px" width="100%">

            </div>
            <div class="col-lg-8">
                <div class="right-side-pro-detail border p-3 m-0">
                    <div class="row">
                        <div class="col-lg-12">
                            <span>@ViewBag.catid</span>
                            <p class="m-0 p-0">@Model.Product_name</p>
                        </div>
                        <div class="col-lg-12">
                            <p class="m-0 p-0 price-pro">RS.@Model.product_price</p>
                            <hr class="p-0 m-0">
                        </div>
                        <div class="col-lg-12 pt-2">
                            <h5>Product Feauters</h5>
                            <span>
                                @*@Model.product_desc*@
                                @Html.Raw(Model.product_desc)
                            </span>
                            <hr class="m-0 pt-2 mt-2">
                        </div>

                        <div class="col-lg-5">
                            <h6>Quantity :</h6>
                            <input type="number" class="form-control text-center w-100" value="1" max="10" min="1">
                        </div>
                        <div class="col-lg-12 mt-3">
                            <div class="row">
                                <div class="col-lg-6 pb-2">
                                    <a asp-action="addtocart" asp-controller="Home" asp-route-id="@Model.product_id" class="btn btn-danger w-100">Add To Cart</a>
                                </div>
                                <div class="col-lg-6">
                                    <a href="#" class="btn btn-success w-100">Buy Now</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
     
        <div class="row">
            <div class="col-lg-12 text-center pt-3">
                <h4>More Product</h4>
            </div>
        </div>
       
        <div class="row mt-3 p-0 justify-content-between text-center pro-box-section">
            @foreach (var items in @ViewBag.prd)
            {




                <div class="col-lg-4 py-4">
                    <div class="pro-box border p-0 m-0">
                        <img src="/Products/@items.ImageFile" style="max-height:350px;">
                        <div>@items.Product_name</div>
                    </div>

                </div>
    





}
        </div>
      
        @*


            @for (int i = ids; i <= det; i++)
            {

                <div class="col-lg-3 pb-2">
                    <div class="pro-box border p-0 m-0">
                        <img src="/Products/@Model.ImageFile">
                        <div>@Model.Product_name</div>
                    </div>

                </div>

                }


        </div>*@
    </div>
</div>
