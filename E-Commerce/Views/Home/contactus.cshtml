@model E_Commerce.Models.ContactModel
@{
    ViewData["Title"] = "contactus";
    Layout = "~/Views/Shared/_custdash.cshtml";

}
<style>
    ::placeholder {
        color: black;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-12 col-md-6 col-xl-7 py-2">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3671.3888254492017!2d72.53553561480122!3d23.046202384941054!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395e84bb5bb8baf7%3A0x70f6affa8af4bd02!2sConvergeSol%20-%20Custom%20Software%20%26%20Web%20Development%20Company!5e0!3m2!1sen!2sin!4v1647410239954!5m2!1sen!2sin" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>
        <div class="col-12 col-md-6 col-xl-5">

            <h1 class="text-center">Contact-US</h1>
            <form method="post" asp-action="contactus" onsubmit="return validation()">
                <div class="form-group">
                    <input type="text" name="uname" asp-for="uname" id="" class="form-control" placeholder="Your Name" aria-describedby="helpId">
                    <span asp-validation-for="uname" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <input type="email" name="email" id="" asp-for="email" class="form-control" placeholder="Your E-mail Address" aria-describedby="helpId" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-lg-3 col-4">
                        <div class="form-group">
                            <input type="text" value="+91" class="form-control px-4">
                        </div>
                    </div>
                    @*<div class="offset-1"></div>*@
                    <div class="col-lg-9 col-8">
                        <div class="form-group">
                            <input type="text" pattern="[0-9]{10}" name="number" id="" class="form-control" placeholder="Your Phone Number" aria-describedby="helpId" asp-for="mobile">
                            <span asp-validation-for="mobile" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-outline">
                    <textarea class="form-control" id="textAreaExample1" rows="4" placeholder="Your Message" asp-for="comment"></textarea>

                </div>
                <div class="pt-3 ">
                    <button type="submit" class="btn btn-primary">Get Call Back</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>



@if (ViewBag.Message != null)
{
    <script>
        console.log('@ViewBag.Message');
        swal("@ViewBag.Message", "You clicked Ok Button!", "success");

    </script>
}