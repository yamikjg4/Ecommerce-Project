@model IEnumerable<E_Commerce.Models.Category_Product>

@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_custdash.cshtml";
    int intSno = 0;
    //Search code


    //pagination code
    PagenatedList pager = new PagenatedList();
    int pageNo = 0;

    if (ViewBag.Pager != null)
    {

        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="height:500px;">
    <div class="carousel-inner h-100">
        <div class="carousel-item active">
            <img class="d-block w-100 img-fluid" src="~/Slider/MicrosoftTeams-image.png" alt="First slide" style="height: 500px;" id="img1">

        </div>
        <div class="carousel-item">
            <img class="d-block w-100 img-fluid" src="~/Slider/MicrosoftTeams-image (1).png" alt="Second slide" style="height: 500px; " id="img2">
        </div>
        <div class="carousel-item">
            <img class="d-block w-100 img-fluid" src="~/Slider/MicrosoftTeams-image (2).png" alt="Third slide" style="height:500px;" id="img3">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="container-fluid p-0">

    <section style="background-color: #eee;">
        <div class="container p-5">
            <p class="text-center h4">Products</p>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-12 col-lg-4  mb-4 mb-md-2" id="datasearching">
                        <div class="card" style="height:100%;">
                            <img src="~/Products/@item.products.ImageFile"
                                 class="card-img-top img-fluid"
                                 alt="Laptop" style="max-height:240px;min-height:auto;" />
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-3">
                                    <h5 class="mb-0">@item.products.Product_name</h5>
                                    <h5 class="text-dark mb-0">Rs.@item.products.product_price</h5>
                                </div>
                                <div class="d-flex justify-content-center mb-3 text-center">
                                    <a asp-action="viewproduct" asp-controller="Home" class="btn btn-primary product-btn" asp-route-id="@item.products.product_id" asp-route-catid="@item.products.cat_id">View Product</a>
                                    @* <button type="button" class="btn btn-outline-primary">Add to cart</button>*@



                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <div class="pt-3">
                @if (pager.TotalPages > 1)
                {
                    <ul class="pagination justify-content-center justify-content-md-end">

                        @if (pager.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pagenumber="1">First</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pagenumber="@(pager.CurrentPage-1)">Previous</a>
                            </li>
                        }


                        @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                        {
                            <li class="page-item @(pge==pager.CurrentPage?"active":"")">
                                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pagenumber="@pge">@pge</a>
                            </li>
                        }

                        @if (pager.CurrentPage < pager.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pagenumber="@(pager.CurrentPage+1)">Next</a>
                            </li>
                            <li>
                                <a class="page-link" asp-controller="Home" asp-action="Index" asp-route-pagenumber="@(pager.TotalPages)">Last</a>
                            </li>

                        }
                    </ul>
                }
            </div>

        </div>

    </section>
</div>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
@if (ViewBag.alert != null)
{
    <script>
        swal("@ViewBag.alert", "Please Click This Button!", "error");
    </script>

}




