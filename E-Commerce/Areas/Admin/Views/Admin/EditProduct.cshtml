<script type="text/javascript">
    function functionConfirm(event) {
        console.log('click');

        swal({
            title: "Are You Sure Update Product?",
            text: "You Will Update Product Ok",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $('form').submit();
                    return true;
                    swal("Product Update Succesfully", {
                        icon: "success",
                    });
                } else {
                    swal("Product Update Cancell!");
                    return false;
                }
            });
        return false;

    }
</script>